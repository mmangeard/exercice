{% extends "layout.html.twig" %}

{% block title %}
	{{parent()}} - Liste des candidatures
{% endblock %}

{% block gsbobjcom_body %}
	<h2>Liste des candidatures</h2>
	<ul>
		{% for uneCandidature in lesCandidatures %}
		<li>
			{# Déclaration de la variable id_modif pour la passer d'URL #}
			{% set id_modif='/candidature/edit/' ~ uneCandidature.id %}

			<p>{{uneCandidature.lastName}} {{uneCandidature.firstName}}
			<a href={{id_modif}} class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> Modifier</a>&nbsp;&nbsp;


			{# Déclaration de la variable id_suppress pour la passer d'URL #}
			{% set id_suppress='/candidature/delete/' ~ uneCandidature.id %}
			<a href={{id_suppress}} class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Supprimer</a></p>
		</li>
		{% else %}
		<li>Pas de candidatures enregistré</li>
		{% endfor %}
	</ul>
{% endblock %}